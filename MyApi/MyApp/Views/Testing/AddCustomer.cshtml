@model MyApi.Models.Customer;
@{
    ViewData["Title"] = "AddCustomer";
}

<div class="container">
    <div class="row">
        <div class="col-4 offset-3 border border-info">
            @if(Model.Id !=0)
            {
                <h1 class="text-center card-header text-warning m-1 p-2">Update Customer Details</h1>
            }
            else
            {
                <h1 class="text-center card-header text-info m-1 p-2">Add Customer Details</h1>
            }
            <form method="post" asp-action="AddCustomer">
                <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name" />
                    <input type="hidden" asp-for="Id"/>
                    <span class="text-danger"  asp-validation-for="Name"></span>
                </div>
                

                <div class="form-group">
                    <label asp-for="Gender"></label>
                    <select class="form-control" asp-for="Gender">
                        <option value="0">--select gender--</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Gender"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsActive"></label>
                    <input type="checkbox" asp-for="IsActive" class="custom-checkbox"/>
                    <span class="text-danger" asp-validation-for="Gender"></span>
                </div>

                <div class="form-group">
                    @if(Model.Id !=0)
                    {
                        <input type="submit"  class="btn btn-sm btn-warning" value="Update" />
                    }
                    else
                    {
                        <input type="submit"  class="btn btn-sm btn-primary" value="Submit" />
                    }                     
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}

