@model IEnumerable<MyApi.Models.Customer>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <a class="btn btn-sm btn-primary m-2 p-2" asp-action="AddCustomer" asp-controller="Testing">Add Customer</a>
            <table class="table table-bordered table-striped table-hover">
                <thead class="bg-light taxt-light taxt-center">
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Active</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if(Model.Count()>0)
                    {
                        @foreach(var d in Model)
                        {
                            <tr>
                                <td>@d.Id</td>
                                <td>@d.Name</td>
                                <td>@d.Gender</td>
                                <td>@d.IsActive</td>
                                 <td>
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Testing" asp-route-id="@d.Id">Edit</a>
                                <a class="btn btn-sm btn-danger" onclick="return confirm('Are you sure,you want to delete it')" asp-action="Delete" asp-controller="Testing" asp-route-id="@d.Id">Delete</a>
                               
                                 </td>
                            </tr>
                           
                        }
                    }
                    else
                    {
                        <tr class="text-center">
                            <td colspan="5">
                                <h2 class="text-warning bg-info">No Records</h2>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

